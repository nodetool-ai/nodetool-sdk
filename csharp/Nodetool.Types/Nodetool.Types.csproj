<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Nodetool.Types</PackageId>
    <Version>0.1.0</Version>
    <Description>Clean C# types for NodeTool data structures with MessagePack support</Description>
    <Authors>NodeTool Contributors</Authors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MessagePack" Version="3.0.300" />
  </ItemGroup>

  <!--
    Only compile the generated DTOs that are valid C#.

    Notes:
    - The `scripts/**` tree contains generator inputs/outputs and is not meant to compile.
    - Some files in `generated/**` are stubs/placeholders or contain unescaped identifiers.
      We exclude those until generation is hardened (keyword escaping, identifier sanitization).
  -->
  <ItemGroup>
    <Compile Remove="scripts\**\*.cs" />
    <Compile Remove="generated\Types\Core.cs" />
    <Compile Remove="generated\Types\Core\**\*.cs" />
    <Compile Remove="generated\Nodes\**\*.cs" />
    <Compile Remove="generated\NodeToolTypes.cs" />
  </ItemGroup>

  <!-- Include only the per-type DTO files (these are valid and used by SDK consumers). -->
  <ItemGroup>
    <!-- Minimal v0.1 set (mini-app style media + text refs) -->
    <Compile Include="generated\Types\Core\ImageRef.cs" />
    <Compile Include="generated\Types\Core\AudioRef.cs" />
    <Compile Include="generated\Types\Core\VideoRef.cs" />
    <Compile Include="generated\Types\Core\DocumentRef.cs" />
    <Compile Include="generated\Types\Core\TextRef.cs" />
  </ItemGroup>

</Project>
